package templates

templ Login() {
	<body>
		<div class="flex flex-col justify-center items-center">
			<div class="py-3">
				<p id="message"></p>
				<form class="p-2 flex flex-col justify-center items-center gap-4">
					<h1 class="text-2xl font-bold">Welcome Back!</h1>
					<input
 						type="text"
 						class="border-2 border-neutral-600 p-1 rounded-md"
 						autocomplete="off"
 						name="username"
 						placeholder="Username"
 						id="username"
					/>
					<input
 						type="password"
 						class="border-2 border-neutral-600 p-1 rounded-md"
 						autocomplete="off"
 						name="password"
 						placeholder="Password"
 						id="password"
					/>
					<button
 						hx-post="/loginUser"
 						hx-target="#message"
 						hx-swap="innerHTML"
 						hx-trigger="click"
 						class="bg-black text-white p-2 w-2/4 font-semibold rounded-md"
 						type="submit"
					>
						ğŸ”“ï¸Login
					</button>
				</form>
			</div>
		</div>
	</body>
	<script>
    document
        .getElementById('message')
        .addEventListener('htmx:afterSwap', () => {
            if (
                document.getElementById('message').innerHTML == 'User Logged in'
            ) {
                window.location.href = '/account';
            }
        });
</script>
}
